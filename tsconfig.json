{
  "compilerOptions": {
    "target": "ES2021",                         
    "module": "commonjs",                  
    "outDir": "./build",                        
    "rootDir": "./",                      
    "strict": true,                           
    "esModuleInterop": true,                
    "skipLibCheck": true,
    "resolveJsonModule": true,              
    "forceConsistentCasingInFileNames": true  
  },
  "include": ["src/*", "src/*/*","src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}